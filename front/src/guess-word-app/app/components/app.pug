//- Navigation
nav.nav-wrapper.hoverable
    
  //- Mobile Navbar 
  ul.mobile
    //- Mobile brand Logo
    a.brand-logo.right(href="/")
      img(src="images/logo.svg" alt="Logo")
    //- Menu Button
    a.button-collapse.waves-effect.waves-light(href="guess-word" 
      data-activates="menu-mobile")
      i.material-icons menu
    //- Users Button
    a.button-collapse.waves-effect.waves-light(href="guess-word" 
      data-activates="users-mobile")
      i.material-icons account_circle

  //- Menu Sidenav
  ul#menu-mobile.side-nav
    //- Account Button
    li.btn.waves-effect.waves-light
      span Account
      i.material-icons account_box
    //- Leaderboards Button
    li.btn.waves-effect.waves-light
      span Leaderboards
      i.material-icons list
    //- Home Button
    li.btn.waves-effect.waves-light
      span Home
      i.material-icon
  
  //- Users Sidenav
  ul#users-mobile.side-nav

  //- Brand logo
  a.brand-logo.center(href="/")
    img(src="images/logo.svg" alt="Logo")
  
  //- Navigation tabs
  ul.navigation-tabs.right
    //- Chat tab button
    li.waves-effect.waves-light
      a.tooltipped([routerLink]="['Chat']"
        data-position="bottom" data-delay="50" data-tooltip="Go to chat")
        i.material-icons chat
    //- Leaderboards tab button
    li.waves-effect.waves-light
      a.tooltipped([routerLink]="['Leaderboards']"
        data-position="bottom" data-delay="50" data-tooltip="See leaderboards")
        i.material-icons list
    //- Account tab button
    li.waves-effect.waves-light
      a.tooltipped([routerLink]="['Account']"
         data-position="bottom" data-delay="50" data-tooltip="Edit accout")
        i.material-icons account_box
    //- Home tab button
    li.waves-effect.waves-light
      a.tooltipped(href="/" data-position="bottom" data-delay="50" data-tooltip="Back to home page")
        i.material-icons home

//- Main content
.main
  router-outlet

