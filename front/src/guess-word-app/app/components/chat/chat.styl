@require 'nib'

.box
  width: 100%
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  flex-wrap: wrap
  flex-basis: 0
  padding: 5px
  
  // Content of the first row
  .content
    width: 100%
    display: flex
    flex-direction: row
    
    word-card, chat-area, user-list
      flex-grow: 1
      flex-basis: 0
      margin: 5px
    
    word-card
      flex-grow: 0.75
    
    chat-area
      flex-grow: 1.5
      
    user-list
      flex-grow: 0.75
      
    chat-area > .chat-area > ul.collection
      height: 400px
    
    user-list > .users > ul.collection
      height: 400px

    @media only screen and (max-width : 768px)
      user-list
        display: none
      
      word-card
        flex-grow: 1
      
      chat-area
        flex-grow: 1

    @media only screen and (max-width : 480px)
      chat-area
        display: none
        
      word-card
        flex-grow: 1

// Content of the second row
.word-controls
  width: 100%
  
  word-letters
    margin-top: 100px
  
  word-inputs
    margin-top: 100px
    