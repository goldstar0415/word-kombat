.box
  //- First row
  .content
    word-card('[image]'="word.image" '[hint]'="word.hint" '[currentWordIndex]'="wordCounter")
    chat-area('[socket]'="socket" '[messages]'="messages")
    user-list('[users]'="users")
  //- Second row
  .word-controls
    word-letters('[letters]'="letters" '(letterClicked)'="onLetterClicked($event)")
    word-inputs('[socket]'="socket" '[word]'="typedWord" '(wordEntered)'="onWordEntered($event)")
