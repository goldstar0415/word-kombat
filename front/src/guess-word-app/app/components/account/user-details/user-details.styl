@require('nib')

@import('../../../../../styles/parts/variables')

.card
  background-color: blue-grey-darken-4
  color: blue-grey-lighten-5
  
  .card-title.activator
    display: flex
    flex-direction: row
    align-items: flex-start

    .username
      text-transform: uppercase
      margin-right: 5px
      font-size: 1.2rem
      font-weight: bold
      margin-right: auto

    .score
      margin-right: 6px
      color: dark-gold
    
    .rank img
      width: 48px
      height: 48px
  
  .card-action
    display: flex
    flex-direction: column
    align-items: center
    background-color: blue-grey-darken-3
    margin: 0
    button
      background-color: grey-darken-4

  .card-reveal
    color: @color
    background-color: @background-color
    
    form .file-field.input-field
      display: flex
      flex-direction: column
      align-items: center
      button
        background-color: grey-darken-4
        span
          background-color: grey-darken-4

  .card-image
    img.activator
      width: 320px
      height 320px
      