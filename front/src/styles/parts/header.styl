// Page header
header.box
    background-attachment: fixed
    background-image: url(header-img)
    background-position: top center
    background-repeat: repeat-y
    background-size: 100%
    height: 100vh
    position: relative
    width: 100%
    overflow: hidden

    .logo
      background-image: url(logo-img)
      background-position: center
      background-repeat: no-repeat
      background-size: 70%
      height: 40vh
      margin-top: -20vh
      margin-left: 3%
      position: absolute
      top: 50%
      width: 100%
    
    .scroll-button
      width: 60px
      height 60px 
      position: fixed
      bottom: 8px
      left: 50%
      margin-left: -30px
      background-color: darken-grey
      color: white
      border: 2px solid almost-white
      &:hover
        background-color: almost-white
        transform: scale(1.1)
        i
          color: black
      i
        padding-right: 4px
        padding-top: 12px
        font-size: 3rem

@media all and (max-width 1190px)
  header.box
    background-color: black
    background-size: auto