// Navigations
nav
  position: fixed
  z-index: 3
  top: 0
  background-color: rgba(black, 0.6)
  
  a
    color: white
    text-decoration: none
    width: 100%
    height: 100%
    font-size: 10pt
    &:hover
      color: black
      font-weight: bold
      
  .btn
    width: 100px
    padding: 0
    font-size: 10pt
    margin-right: 5px
    margin-top: 12px
    background-color: grey-darken-3
    &:hover
      background-color: white
      color: black
      font-weight: bold
  
  #logout-trigger
    display: none