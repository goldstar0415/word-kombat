@import 'variables'

body, html
  margin: 0
  padding: 0
  width: 100%
  height: 100%

body
  background: url(bg-img)

.message
  max-width: 420px
  .content
    text-align: center
    color: almost-white
    text-shadow: black-shadow
    
    h1
      font-size: 36px
      line-height: 1.2
    
    a
      margin-left: 5px
      font-size: 16px
    
    p
      background: rgba(black, .5)
      border-radius: 5px
      color: almost-white
      padding: 5px

    .btn
      background-color: light-grey
      transition: all 0.3s

      &:hover
        background-color: almost-white
        color: dark-grey
        text-shadow: none
        font-weight: bold
        transition: all 0.3s