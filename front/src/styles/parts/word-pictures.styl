// Words pictures
.pics
  .img-row
    margin-top: 20px
    margin-bottom: 0

  figure
    background-color: rgba(black, 0.2)
    border-radius: 5px
    height: 250px
    margin: auto
    margin-bottom: 20px
    opacity: 0
    overflow: hidden
    transform: translateX(-100px)
    transition: all 0.6s ease-in-out
    width: 200px

    img
      filter: grayscale(0.8)
      -webkit-filter: grayscale(0.8)
      border-radius: 5px
      height: 190px
      margin-top: 10px
      width: 190px
      transition: all 0.6s ease-in-out

    figcaption
      padding-top: 5px
      color: white
      background-color: rgba(black, 0.8)
      border-radius: 3px
      padding: 2px
      margin-top: 6px
      font-size: 14px
      transition: all 0.3s ease-in-out

    &:hover
      background-color: rgba(black, 0.6)
      transition: all .3s
      transform: scale(1.1)
      cursor: pointer

      img
        filter: none
        -webkit-filter: none
        transform: scale(1.2)
        transition: all 0.4s ease-in-out

      figcaption
        transition: all 0.4s ease-in-out
        color: rgba(black, .8)
        background-color: white
        font-weight: bold
        margin-top: 17px

    &.is-showing
      opacity: 1
      transform: translateX(0)