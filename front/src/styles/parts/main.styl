// Main
main.content
  background-image: url(bg-img)
  margin-bottom: 200px
  overflow: hidden
  position: relative
  z-index: 2
  article
    color: almost-white
    margin: auto
    max-width: 640px
    padding: 50px 0 20px 0
    text-align: center
    h1
      color: ghost-grey
      weight: 300px
      text-shadow: 2px 2px 5px black
      b
        color: white
    p
      padding: 15px
      background-color: rgba(black, 0.3)
      font-size: 1.2rem
      text-align: justify
      box-shadow: 0 0 5px 1px black
    &:nth-child(2)
      padding-top 0

@media all and (max-width 630px)
  main.content
    margin-bottom: 40px