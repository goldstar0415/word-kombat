{
  "name": "word-kombat-api",
  "version": "0.5.0",
  "description": "rest-api for word-kombat",
  "author": "saka7",
  "license": "BSD3",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "nodemon --exec ts-node --inspect=localhost:9229 --fast --type-check ./src/main.ts",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "db:create": "sequelize db:create --config src/config/cli/database.js",
    "db:migrate": "sequelize  db:migrate --config  src/config/cli/database.js  --migrations-path src/database/migrations ",
    "db:migrate:undo": "sequelize  db:migrate:undo --config  src/config/cli/database.js  --migrations-path src/database/migrations ",
    "db:migrate:undo:all": "sequelize  db:migrate:undo:all --config  src/config/cli/database.js  --migrations-path src/database/migrations ",
    "db:migrate:status": "sequelize  db:migrate:status --config  src/config/cli/database.js  --migrations-path src/database/migrations ",
    "db:seed:all": "sequelize  db:seed:all --config  src/config/cli/database.js  --seeders-path src/database/seeders ",
    "db:seed:undo": "sequelize  db:seed:undo --config  src/config/cli/database.js  --seeders-path src/database/seeders ",
    "db:seed:undo:all": "sequelize  db:seed:undo:all --config  src/config/cli/database.js  --seeders-path src/database/seeders ",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@bashleigh/nest-config": "0.0.6",
    "@nest-middlewares/compression": "^1.1.1",
    "@nest-middlewares/cors": "^1.1.1",
    "@nest-middlewares/errorhandler": "^1.1.1",
    "@nest-middlewares/helmet": "^1.1.1",
    "@nestjs/common": "^4.5.9",
    "@nestjs/core": "^4.5.10",
    "@nestjs/microservices": "^4.5.8",
    "@nestjs/swagger": "^1.2.2",
    "@nestjs/testing": "^4.5.5",
    "@nestjs/websockets": "^4.5.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "cloudinary": "^1.11.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "jsonwebtoken": "^8.2.1",
    "nestjs-extensions": "^0.29.0",
    "pg": "^7.4.1",
    "pino": "^4.16.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6",
    "sequelize": "^4.37.6",
    "sequelize-typescript": "^0.6.3",
    "socketio-jwt": "^4.5.0",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/sequelize": "^4.27.14",
    "@types/socket.io": "^1.4.36",
    "@types/supertest": "^2.0.4",
    "jest": "^21.2.1",
    "nodemon": "^1.18.3",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
